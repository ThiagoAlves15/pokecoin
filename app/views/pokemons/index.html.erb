<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-10">
    <h2 class="mb-4">
      Pokemons
    </h2>

    <div class="mb-4">
      <%= link_to 'New pokemon', new_pokemon_path, class: "btn btn-outline-primary mb-4" %>

      <div class="row row-cols-1 row-cols-md-4 g-4 mb-4">
        <% @pokemons.each do |pokemon| %>
          <%= render pokemon %>
        <% end %>
      </div>
    </div>
  </div>
</div>
