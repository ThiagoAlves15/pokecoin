<div class="cointainer d-flex flex-wrap align-items-center justify-content-center m-5">
  <div class="col-md-8">
    <h2>
      <%= I18n.t('service_pages.actions.show.title') %>
    </h2>

    <div class="mb-4">
      <%= render @pokemon %>

      <div class="d-grid gap-2 col-md-8 mx-auto mt-4">
        <div class="d-flex gap-2">
          <%= link_to 'Edit this pokemon', edit_pokemon_path(@pokemon), class: "btn btn-outline-primary w-100" %>
          <%= link_to 'Back to pokemons', pokemons_path, class: "btn btn-outline-primary w-100" %>
        </div>

        <hr class="mb-3 mt-4" />

        <%= button_to 'Release this pokemon', @pokemon, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger w-100" %>
      </div>
    </div>
  </div>
</div>
